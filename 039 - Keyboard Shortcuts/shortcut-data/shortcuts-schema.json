{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Shortcuts",
    "description": "Shortcut Data for Different Applications",
    "type": "object",
    "additionalProperties": true,
    "required": [ "applications" ],
    "properties": {
        "applications": {
            "type": "object",
            "additionalProperties": true,
            "patternProperties": {
                "[a-z-]*": {
                    "$ref": "#/$defs/application"
                }
            }
        }
    },
    "$defs": {
        "application": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "shortcuts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "keys": {
                                "type": "string",
                                "pattern": "^((?:ctrl \\+ )?(?:Windows \\+ )?(?:alt \\+ )?(?:shift \\+ )?(?:(?:F\\d{1,2})|\\d|home|return|enter|tab|end|escape|delete|backspace|arrows|left|right|down|up|left\/right|up\/down|arrows\/mouse|click|dblclick|scroll|mouse|number|space|print|pagedown|pageup|[a-zäüö]|,|\\.|\\^|\\(|\\)|'|\\?)(?:((?<=\\S) (?=\\S))|((?=$)))){1,}$"
                            },
                            "description": {
                                "type": "string",
                                "pattern": "((Snap|Choose|Go|Push|Commit|Exit|Turn|Set|Maximize|Italic|Underline|Cut|Fit|Pan|Copy|Enter|Move|Duplicate|Replace|Save|Zoom|New|Select|Insert|Bold|Add|Scroll|Go|Close|Inser|Run|Jump|Use|Block|View|Search|Start|Play|Focus|Reset|Minimize|Lock|Split|Delete|Rename|Toggle|Create|Show|Open|Preview|Switch|Setup|Format|Zoom|Undo|Redo|Fold|Unfold))(?=$| )[\\w /,]*(\\[When .*\\])?$"
                            }
                        }
                    }
                }
            }
        }
    }
}
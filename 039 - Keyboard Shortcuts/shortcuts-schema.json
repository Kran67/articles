{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Product",
    "description": "A product in the catalog",
    "type": "object",
    "additionalProperties": true,
    "required": [ "applications" ],
    "properties": {
        "applications": {
            "type": "object",
            "additionalProperties": true,
            "patternProperties": {
                "[a-z-]*": {
                    "$ref": "#/$defs/application"
                }
            }
        }
    },
    "$defs": {
        "application": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "shortcuts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "keys": {
                                "type": "string",
                                "pattern": "^((ctrl \\+ )?(Windows \\+ )?(alt \\+ )?(shift \\+ )?((F\\d{1,2})|home|return|enter|tab|end|escape|delete|backspace|arrows|left|right|down|up|left/right|up/down|arrows/mouse|click|scroll|mouse|number|space|print|[a-z]|Ã¤|,|\\.))$"
                            },
                            "description": {
                                "type": "string",
                                "pattern": "^.*\\[When .*\\]$"
                            }
                        }
                    }
                }
            }
        }
    }
}
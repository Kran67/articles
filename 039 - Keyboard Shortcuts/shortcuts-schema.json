{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Product",
    "description": "A product in the catalog",
    "type": "object",
    "additionalProperties": true,
    "required": [ "applications" ],
    "properties": {
        "applications": {
            "type": "object",
            "additionalProperties": true,
            "patternProperties": {
                ".*": {
                    "$ref": "#/$defs/application"
                }
            }
        }
    },
    "$defs": {
        "application": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "shortcuts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "keys": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}